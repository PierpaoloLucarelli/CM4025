html
	head
		title= "The game market"
	body
		h1= "Hello " + user
		h1= "You have " + points + " points"

		h2="Select a car"

		table.myTable
			tr.table
				th Model
				th Speed
				th Cost (points)
				th action
			each car in cars
				tr.table 
					td #{car.model}
					td #{car.speed}
					td #{car.cost}
					td 
						button Buy
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
	script.
		$("tr.table button").click(function() {
			console.log("click");
			$row = $(this).parent().parent();
			var tableData = $row.children("td").map(function() {
			return $(this).text();
		}).get();
		console.log(tableData);
			$.post( "market", {
			model: tableData[0],
			speed: tableData[1],
			cost: tableData[2]
		}).done(function( data ) {
				console.log("done");
			});
		});
		